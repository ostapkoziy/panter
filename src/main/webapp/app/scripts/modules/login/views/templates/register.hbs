<div class="row login-module">
    <div class="small-11 large-6 medium-9 small-centered columns" style="padding:0px">

        <form id="register">
            <div class="row">
                <div class="large-12 columns">
                    <h4 class="logo"><i class="fa fa-paper-plane"></i> Interestin </h4>
                </div>
            </div>
            <div class="row">
                <div class="large-12 columns">
                    <input type="text" name="email" placeholder="Email">
                </div>
            </div>
            <div class="row">
                <div class="large-12 columns">
                    <input type="password" name="password" placeholder="{{translate "label.password"}}">
                </div>
            </div>
            <div class="row">
                <div class="large-12 columns">
                    <input type="password" name="confirm_password" placeholder="{{translate "label.confirm.password"}}">
                </div>
            </div>
            <div class="row">
                <div class="large-12 columns">
                    <input type="submit" class="button button-main expand" value="{{translate "button.register"}}">
                </div>
                <div class="large-12 columns text-center">
                    <a href="#login" class="" value="Back to login">
                        <div class="back-button">
                            <i class="fa fa-angle-left fa-2x"></i>
                        </div>
                    </a>
                </div>
            </div>
        </form>
        <div class="loader hide"></div>
    </div>
</div>